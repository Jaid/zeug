{
  "name": "zeug",
  "version": "2.0.0",
  "type": "module",
  "exports": "./src/index.ts",
  "scripts": {
    "build": "wireit",
    "build:production": "wireit",
    "release": "wireit",
    "release:windows": "wireit",
    "start": "printf '%s\\n' 'Script behaviour not specified' >&2",
    "test": "wireit",
    "test-build": "wireit",
    "test-build:production": "wireit"
  },
  "wireit": {
    "build": {
      "env": {
        "NODE_ENV": "development"
      },
      "output": [
        "dist/package/zeug/development"
      ],
      "files": [
        "src/**/*",
        "rollup.config.js",
        "package.json"
      ],
      "command": "node node_modules/rollup/dist/bin/rollup --config"
    },
    "build:production": {
      "env": {
        "NODE_ENV": "production"
      },
      "output": [
        "dist/package/zeug/production"
      ],
      "files": [
        "src/**/*",
        "rollup.config.js",
        "package.json"
      ],
      "command": "node node_modules/rollup/dist/bin/rollup --config"
    },
    "release": {
      "dependencies": [
        "test-build:production",
        "build:production"
      ],
      "command": "fd --unrestricted --full-path 'dist/package/[\\w-]+/production/package.json' --exec bash -c 'npm publish {//}'"
    },
    "release:windows": {
      "dependencies": [
        "test-build:production",
        "build:production"
      ],
      "command": "pwsh -Command \"Get-ChildItem -Path 'dist/package/*/production/package.json' | ForEach-Object { npm publish $_.DirectoryName }\""
    },
    "test": {
      "env": {
        "NODE_ENV": "test"
      },
      "files": [
        "src/**/*",
        "test/**/*",
        "package.json"
      ],
      "command": "node --import tsx test/test.ts"
    },
    "test-build": {
      "env": {
        "NODE_ENV": "test",
        "MAIN_MODULE": "./dist/package/zeug/development/lib.js"
      },
      "dependencies": [
        "build"
      ],
      "command": "node --import tsx test/test.ts"
    },
    "test-build:production": {
      "env": {
        "NODE_ENV": "test",
        "MAIN_MODULE": "./dist/package/zeug/production/lib.js"
      },
      "dependencies": [
        "build:production"
      ],
      "command": "node --import tsx test/test.ts"
    }
  },
  "dependencies": {
    "@prettier/sync": "^0.5.2",
    "debug": "^4.3.5",
    "format-thousands": "^2.0.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "immer": "^10.1.1",
    "lodash-es": "^4.17.21",
    "map-obj": "^5.0.2",
    "normalize-package-data": "^6.0.1",
    "prettier": "^3.3.0",
    "super-regex": "^1.0.0",
    "yaml": "^2.4.3",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "@types/yargs": "^17.0.32",
    "dts-bundle-generator": "^9.5.1",
    "eslint-config-jaid": "^10.4.0",
    "rollup-config-factory": "^0.4.1",
    "tsconfig-jaid-node": "^8.1.0",
    "type-fest": "^4.18.3",
    "typescript": "^5.4.5"
  }
}