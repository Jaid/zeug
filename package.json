{
  "name": "zeug",
  "version": "2.1.0",
  "type": "module",
  "exports": "./src/index.ts",
  "scripts": {
    "build": "wireit",
    "build:production": "wireit",
    "release": "fd --unrestricted --full-path 'dist[\\\\/]package[\\\\/][\\w-]+[\\\\/]production[\\\\/]package.json' --exec bun publish --cwd {//}",
    "start": "printf '%s\\n' 'Script behaviour not specified' >&2",
    "test": "wireit",
    "test-build": "wireit",
    "test-build:production": "wireit"
  },
  "wireit": {
    "build": {
      "env": {
        "NODE_ENV": "development"
      },
      "output": [
        "dist/package/zeug/development"
      ],
      "files": [
        "src/**/*",
        "rollup.config.js",
        "package.json"
      ],
      "command": "node node_modules/rollup/dist/bin/rollup --config"
    },
    "build:production": {
      "env": {
        "NODE_ENV": "production"
      },
      "output": [
        "dist/package/zeug/production"
      ],
      "files": [
        "src/**/*",
        "rollup.config.js",
        "package.json"
      ],
      "command": "node node_modules/rollup/dist/bin/rollup --config"
    },
    "test": {
      "env": {
        "NODE_ENV": "test"
      },
      "files": [
        "src/**/*",
        "test/**/*",
        "package.json"
      ],
      "command": "node --import tsx test/test.ts"
    },
    "test-build": {
      "env": {
        "NODE_ENV": "test",
        "MAIN_MODULE": "./dist/package/zeug/development/lib.js"
      },
      "dependencies": [
        "build"
      ],
      "command": "node --import tsx test/test.ts"
    },
    "test-build:production": {
      "env": {
        "NODE_ENV": "test",
        "MAIN_MODULE": "./dist/package/zeug/production/lib.js"
      },
      "dependencies": [
        "build:production"
      ],
      "command": "node --import tsx test/test.ts"
    }
  },
  "dependencies": {
    "@prettier/sync": "^0.6.1",
    "debug": "^4.4.3",
    "format-thousands": "^2.0.0",
    "fs-extra": "^11.3.2",
    "handlebars": "^4.7.8",
    "immer": "^10.1.3",
    "lodash-es": "^4.17.21",
    "map-obj": "^6.0.0",
    "normalize-package-data": "^8.0.0",
    "prettier": "^3.6.2",
    "super-regex": "^1.0.0",
    "yaml": "^2.8.1",
    "yargs": "^18.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@types/yargs": "^17.0.33",
    "dts-bundle-generator": "^9.5.1",
    "eslint-config-jaid": "^13.3.2",
    "rollup-config-factory": "^0.4.1",
    "tsconfig-jaid-node": "^8.1.0",
    "type-fest": "^5.0.1",
    "typescript": "^5.9.2"
  }
}